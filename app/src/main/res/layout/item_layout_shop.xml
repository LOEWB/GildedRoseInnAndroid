<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/line"
            android:layout_alignStart="@+id/line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEM"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELLIN"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/item_sellin"
                android:textSize="15dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUALITY"
                android:id="@+id/textView3"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/item_text"
                android:textSize="15dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="3dp"
                android:layout_marginRight="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/item_quality"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="15dp"
                android:layout_marginTop="3dp" />


        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE MY MONEY"
            android:id="@+id/button"
            android:layout_below="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:focusable="true" />
        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$"
            android:id="@+id/dollar"
            android:textColor="#216e00"
            android:layout_above="@+id/button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:password="false"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/price_text"
            android:layout_above="@+id/button"
            android:layout_toLeftOf="@+id/dollar"
            android:layout_toStartOf="@+id/dollar"
            android:layout_marginRight="3dp" />


    </RelativeLayout>

</LinearLayout>